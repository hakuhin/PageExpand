{
  "default_locale": "en",
  "name": "__MSG_extension_name__",
  "version": "1.7.0",
  "manifest_version": 3,
  "description": "__MSG_extension_description__",
  "author": "hakuhin",
  "icons": {
    "16": "icon16.png",
    "19": "icon19.png",
    "32": "icon32.png",
    "38": "icon38.png",
    "48": "icon48.png",
    "64": "icon64.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [{
    "all_frames": true,
    "js": [ "PageExpand.js" , "content_scripts.js" ],
    "matches": [ "http://*/*" , "https://*/*" ],
    "match_about_blank": true,
    "match_origin_as_fallback": true,
    "run_at": "document_start"
  }],
  "action": {
    "default_icon" : {
      "16": "icon16.png",
      "18": "icon18.png",
      "19": "icon19.png",
      "32": "icon32.png",
      "38": "icon38.png",
      "48": "icon48.png",
      "64": "icon64.png",
      "128": "icon128.png"
    },
    "default_title": "__MSG_extension_name__",
    "default_popup": "popup.html"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "sidebar_action": {
    "default_icon":  {
      "16": "icon16.png",
      "19": "icon19.png",
      "32": "icon32.png",
      "38": "icon38.png",
      "48": "icon48.png",
      "64": "icon64.png",
      "128": "icon128.png"
    },
    "default_title": "__MSG_extension_name__",
    "default_panel": "sidebar.html"
  },
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "permissions": [
    "tabs",
    "contextMenus",
    "storage",
    "clipboardWrite",
    "downloads",
    "downloads.shelf",
    "sidePanel"
  ],
  "host_permissions": [
    "http://*/" , "https://*/"
  ],
  "applications": {
    "gecko": {
      "id": "PageExpand@hakuhin.jp"
    }
  }
}